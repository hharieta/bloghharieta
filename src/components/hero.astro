---
import { Picture } from "astro:assets";
import heroImage from "@assets/gatovsky.webp";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import '../styles/cards.css';
---

<section
  class="grid lg:grid-cols-2 items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <article class="py-6 md:order-1 hidden md:block rounded-ms">
    <Picture
      src={heroImage}
      alt="Inge Gatovsky"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
      style={{ 
        borderRadius: "40% 80% 80% 40% / 40% 40% 80% 80%",
        // clipPath: "ellipse(80% 50% at 30% 50%)",
        overflow: "hidden",
       }}
    />
  </article>
  <article>
    <div class="pl-0">
      <h1
        class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
        Inge Gatovsky
      </h1>
      <h2 class="text-4xl lg:text-5xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter">
        Cloud Engineer
      </h2>
      <p class="text-xl mt-4 text-slate-600 max-w-xl">
        With a passion for technology and
        innovation.
      </p>
    </div>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="mailto:&#99;&#111;&#110;&#116;&#97;&#99;&#116;&#111;&#64;&#104;&#104;&#97;&#114;&#105;&#101;&#116;&#97;&#46;&#108;&#97;&#116;"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="font-mplus text-white w-5 h-5" name="bx:bx-at" />
         Contact
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/hharieta"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="font-mplus text-black w-4 h-4" name="bx:bxl-github" />
        GitHub Repo
      </Link>
    </div>
  </article>
</section>
