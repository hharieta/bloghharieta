---
interface Props {
  url: string;
  title: string;
  thumbnail: string;
  issuer: string;
}

const { url, title, thumbnail, issuer } = Astro.props;
---
<div class=" text-center content-center items-center tex-center">
    <a href={url} target="_blank" class="decoration-inherit cursor-pointer">
        <img
        src={thumbnail}
        alt={title}
        class="rounded-lg w-full md:w-28 m-auto"
        loading="lazy"
        />
        <div>
        <h3 
        class="text-lg font-semibold text-gray-800 mt-2">{title}</h3>
        </div>
        <p class="text-md ">{issuer}</p>
    </a>
    </div>

