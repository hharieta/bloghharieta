---
interface Props {
  url: string;
  title: string;
  thumbnail: string;
  issuer: string;
}

import Image from 'astro/components/Image.astro';
const { url, title, thumbnail, issuer } = Astro.props;
---

<div class="w-full md:w-max flex flex-col text-center items-center content-center">
  <div class="w-full md:w-max content-center items-center justify-center">
    <a href={url} target="_blank" class="decoration-inherit cursor-pointer">
        <Image
        src={thumbnail}
        alt={title}
        width={100}
        height={100}
        class="rounded-lg w-full md:w-28 m-4"
        loading="eager"
        />
        <div >
        <h3 
        class="text-lg font-semibold text-gray-800">{title}</h3>
        </div>
        <p class="text-md">{issuer}</p>
    </a>
</div>

