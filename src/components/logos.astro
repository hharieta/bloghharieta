---
// @ts-ignore
import { Icon } from "astro-icon/components";
import '../styles/carousel.css';
---


<section class="carousel-container content-center items-center w-max h-max  md:w-full md:h-full  lg:w-max lg:h-max ">
  <div class="carousel-title">
    <h3 class="text-center text-2xl lg:text-6xl md:text-4xl ">Gatovsky stack</h2>
  </div>
  <article class="carousel-track h-max lg:h-full md:h-full flex gap-1 md:gap-5 items-center justify-center mt-10">
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:python" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:docker" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:kubernetes" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:pulumi" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:linux" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:jenkins" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:amazonaws" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:mysql" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:postgresql" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:git" />
    </div>
    <!-- Duplicate items for seamless looping -->
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:terraform" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:gnubash" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:javascript" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:flask" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:django" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:amazondynamodb" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:awslambda" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:amazonapigateway" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:swagger" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:astro" />
    </div>
    <div class="carousel-item">
      <Icon class="size-10 md:size-16" name="simple-icons:tailwindcss" />
    </div>
  </article>
</section>