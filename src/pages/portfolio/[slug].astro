---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import cv from "@cv";
import {formatDate} from "@utils/dateFormatter";

const { slug } = Astro.params;
const project = cv.projects.find((proj) => proj.name.toLowerCase().replace(/\s+/g, '-') === slug);

if (!project) {
  throw new Error(`Project not found for slug: ${slug}`);
}

const date = formatDate(project.date, "year"); // year, year-month, year-month-day
---

<Layout title={project.name}>
  <Container>
    <section class="w-full flex flex-col content-center items-center mt-16">
      <div class="w-full min-h-full max-w-2xl flex flex-col items-start gap-3">
          <div class="content-center">
            <div class="flex content-center items-center">
              <a href="/portfolio">Back</a>
              <span>
                <svg xmlns="http://www.w3.org/2000/svg" width="2rem" height="2rem" viewBox="0 0 24 24">
                  <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="m10 17l5-5m0 0l-5-5" />
                </svg>
              </span>
              <h1 class="text-lg md:text-xl md:text-2-xl">{project.name}</h1>
              <div>
                <span class="text-sm font-medium ml-2 bg-fuchsia-200 text-fuchsia-500 border border-fuchsia-300 rounded-md px-0.5 md:px-1.5 py-0.5">{date}</span>
              </div>
            </div>
            <div class="pt-10 pb-10">
              {project.content}
            </div>
            <div class="list-container">
              <ul>
                {
                  project.features.map((feature) => (
                    <li>{feature}</li>
                  ))
                } 
              </ul>
            </div>
          </div>
          <div class="text-sm font-medium pt-10">
            <ul>
              <li class="grid grid-cols-[2fr_4fr] gap-2 mb-2">
                <div>
                  <span class="uppercase bg-fuchsia-200 text-fuchsia-500 border border-fuchsia-300 rounded-md px-1.5 py-0.5">Platform</span>
                </div>
                <span>{project.platform}</span>
              </li>
              <li class="grid grid-cols-[2fr_4fr] gap-2 mb-2">
                <div>
                  <span class="uppercase bg-fuchsia-200 text-fuchsia-500 border border-fuchsia-300 rounded-md px-1.5 py-0.5">Stack</span>
                </div>
                <span>
                    {
                      project.stack.map((item) => (
                        <span class="mr-4">{item}</span>
                      ))
                    }
                </span>
              </li>
              <li class="grid grid-cols-[2fr_4fr] gap-2 mb-2">
                <div class="ms-px">
                  <span class="uppercase bg-fuchsia-200 text-fuchsia-500 border border-fuchsia-300 rounded-md px-1.5 py-0.5">Demo</span>
                </div>
                <a href={project.demo} target="_blank" class="hover:text-fuchsia-500">{project.demo}</a>
              </li>
            </ul>
        </div>
      </div>
      <div id="custom-controls-gallery" class="relative w-full lg:w-3/5 pl-0 pt-20" data-carousel="slide">
        <!-- Carousel wrapper -->
        <div class="relative h-56 overflow-hidden rounded-lg md:h-96 py-20">
          {
            project.images.map((image) =>(
            <div class="hidden duration-700 ease-in-out" data-carousel-item>
              <img
                src={image}
                class="absolute block max-w-full h-auto -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
                loading="eager"
                alt={project.name}
              >
            </div>
            ))
          }
        </div>
        <div class="flex justify-center items-center pt-4">
            <button type="button" class="flex justify-center items-center me-4 h-full cursor-pointer group focus:outline-none" data-carousel-prev>
                <span class="text-slate-400 hover:text-slate-900 dark:hover:text-white group-focus:text-slate-900 dark:group-focus:text-white">
                    <svg class="rtl:rotate-180 w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0 4 4M1 5l4-4"/>
                    </svg>
                    <span class="sr-only">Previous</span>
                </span>
            </button>
            <button type="button" class="flex justify-center items-center h-full cursor-pointer group focus:outline-none" data-carousel-next>
                <span class="text-slate-400 hover:text-slate-900 dark:hover:text-white group-focus:text-slate-900 dark:group-focus:text-white">
                    <svg class="rtl:rotate-180 w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                    </svg>
                    <span class="sr-only">Next</span>
                </span>
            </button>
        </div>
      </div>
    </section>
  </Container>
</Layout>
<script src="flowbite/dist/flowbite.min.js"></script>


<style>
  .list-container {
  display: flex;
  flex-direction: column;
  padding-left: 0;
}

.list-container ul {
  list-style: url('/images/bullet.svg');
  padding-left: 1rem;
}

.list-container li {
  margin-bottom: 0.5em; /* Ajusta el espacio entre los ítems de la lista */
  padding-left: 0.5em; /* Ajusta la indentación del texto */
  text-indent: 0; /* Ajusta la indentación negativa para alinear el texto */
  line-height: 1.5; /* Mejora la legibilidad */
}

</style>